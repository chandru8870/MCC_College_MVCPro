@model MCC_College_MVCPro.Models.AdminLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<section class="w3l-contact py-5" id="contact">
    <div class="container py-md-5 py-4">
        <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
            <p class="text-uppercase">Get In Touch</p>
            <h3 class="title-style">Login</h3>
        </div>
        <div class="title-main text-center mx-auto mb-md-5 mb-4">
        <div class="row contact-block text-center">
            <div class="col-md-7 contact-right" >
                <form action="Login" method="post" class="signin-form">
                    <div class="input-grids">
                        <div class="row">
                            <div class="col-sm-6">
                                <input type="text" name="userName" id="userName" placeholder="User Name"
                                       class="contact-input" required="" />
                            </div> <br />
                            <div class="col-sm-6">
                                <input type="Password" name="Password" id="Password" placeholder="Password"
                                       class="contact-input" required="" />
                            </div>
                        </div>

                        <div class="text-start">
                            <button class="btn btn-style btn-style-3">Login</button>
                        </div>
                    </div>
                </form>
            </div>
          
        </div>
            </div>
    </div>
</section>
    <h2>@Html.ViewData["Message"]</h2>
   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
